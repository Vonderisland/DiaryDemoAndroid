<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_diary_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="添加标题"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/primaryText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_calender_circle"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="请选择时间..."
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <EditText
            android:hint="日记内容"
            android:id="@+id/et_diary_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/secondaryText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingBottom="20dp">
            <ImageView
                android:id="@+id/edit_diary_picture"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/add_picture"/>
            <ImageView
                android:id="@+id/delete_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:layout_alignEnd="@id/edit_diary_picture"
                android:layout_alignTop="@id/edit_diary_picture"
                android:src="@drawable/delete"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>